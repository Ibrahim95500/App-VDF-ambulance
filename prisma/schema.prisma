generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String           @id @default(cuid())
  name          String?
  email         String?          @unique
  emailVerified DateTime?
  image         String?
  role          Role             @default(SALARIE)
  password      String?
  birthDate     DateTime?
  firstName     String?
  lastName      String?
  phone         String?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @default(now()) @updatedAt
  accounts      Account[]
  requests      AdvanceRequest[]
  leaveRequests  LeaveRequest[]
  serviceRequests ServiceRequest[]
  notifications  Notification[]
  sessions       Session[]

  isActive       Boolean   @default(true)
  deletionReason String?   @db.Text
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String
  status    String?
  link      String?
  read      Boolean  @default(false)
  dismissed Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AdvanceRequest {
  id          String        @id @default(cuid())
  amount      Float
  reason      String?
  status      RequestStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userId      String
  targetMonth String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id         String        @id @default(cuid())
  type       LeaveType
  startDate  DateTime
  endDate    DateTime
  startAmPm  String
  endAmPm    String
  reason     String?
  attachment String?
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  userId     String
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ServiceRequest {
  id          String        @id @default(cuid())
  source      RequestSource @default(APP)
  category    String?       // e.g. RH, Mat√©riel, Autre
  subject     String
  description String        @db.Text
  status      RequestStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  SALARIE
  RH
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RequestSource {
  APP
  WHATSAPP
  EMAIL
}

enum LeaveType {
  CP
  MA
  CSS
}
